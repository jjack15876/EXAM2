doctype html
html
	head
		title= 修改
	body
		div(style='float:left;margin:10px;')
			a(href='/') 首頁

		div(style='float:right')
			if (username && authenticated)
				span #{username}
				a(href='/profile', style='margin:10px;') 修改
				a(href='/add_article', style='margin:10px;') 發表文章
				a(href='/signout', style='margin:10px;') 登出
			else
				a(href='/signin', style='margin:10px;') 登入
				a(href='/register', style='margin:10px;') 註冊
	
	div(style='padding:50px;')
		form(name="modify", action="/apis/update/" + messageID, method="post")
			h1 修改文章
			div
				p
					span 筆名: 
					label(style='padding-right:50px') #{username}
				p
					textarea(cols="50", rows="25", style='resize : none;', name="Content") #{blogs[0].Article)
				div
					span(style='padding-right:377px')
					input(type="submit", name="submit", value="留言")

