doctype html
html
	head
		title= 登入
	body
    
		div(style='float:left;margin:10px;')
			a(href='/') 首頁
	
		div(style='float:right')
			if (username && authenticated)
				span #{username}
				a(href='/signout', style='margin:10px;') 登出
				a(href='/profile', style='margin:10px;') 個人資料
			else
				a(href='/signin', style='margin:10px;') 登入
				a(href='/register', style='margin:10px;') 註冊
				a(href='/forget', style='margin:10px;') 忘記密碼
				
		div(style='padding:50px;')
			form(name="add", action="/apis/add", method="post")
				h1 發表文章
				div
					p
						span 筆名: 
						label(style='padding-right:50px') #{username}
					p
						textarea(cols="50", rows="25", style='resize : none;', name="Content")
					div
						span(style='padding-right:377px')
						input(type="submit", name="submit", value="儲存")
						
						
						