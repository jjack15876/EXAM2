doctype html
html
	head
		title= 登入
	body
		div(style='float:left;margin:10px;')
			a(href='/') 首頁
			body(background="http://ppt.cc/Thudo",style='background-repeat : no-repeat;background-size:1400px')
		div(style='float:right')
			if (username && authenticated)
				span #{username}
				a(href='/signout', style='margin:10px;') 登出
				a(href='/add_article', style='margin:10px;') 發表文章
				a(href='/profile', style='margin:10px;') 修改
				
			else
				a(href='/signin', style='margin:10px;') 登入
				a(href='/register', style='margin:10px;') 註冊
	
	div(style='padding:50px;')
		h1= 名稱

	for article in blogs
		div
			div(style='float:left;margin-top:10px;')= article.Username
			div(style='float:right;margin-top:10px;')= article.CreateDate
			br
			div(style='clear:both')= article.Article
				a(href='/message/'+article.id, style='float:right;margin-top:105px;margin-right:20px;') 留言
			hr(style='margin-top:110px;')
